@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-head">
    <div class="page-title">
        <h1>Manage Product</h1>
    </div>
    <div class="page-toolbar">
        <a href="@Url.Action("CreateOrEdit", "Product")" class="btn btn-circle btn-success"><i class="fa fa-plus-circle"></i> Add New</a>
    </div>
</div>

<div class="row margin-top-10">
    <div class="col-md-12">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-globe"></i>Product List
                </div>
                <div class="tools">
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover" id="ProductList">
                    <thead>
                        <tr>
                            <th class="table-checkbox"></th>
                            <th> Product Name </th>
                            <th> Product Style </th>
                            <th> Category Name </th>
                            <th> Sub Category Name </th>
                            <th> Include Vat</th>
                            <th> Material Cost </th>
                            <th> CM </th>
                            <th> Purchase Amount </th>
                            <th> Sell Amount </th>
                            <th> Active Status </th>
                            <th> Image </th>
                            <th> Action </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.modal -->
<div class="modal fade bs-modal-lg" id="ProductItemModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Product Item</h4>
            </div>
            <div class="modal-body">

                <div class="portlet light bordered">
                    <div class="portlet-title">
                        <div class="caption font-green-sharp">
                            <i class="icon-speech font-green-sharp"></i>
                            <span class="caption-subject bold uppercase"> Product Item</span>

                        </div>
                    </div>
                    <div class="portlet-body scroller" style="height: 300px">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="gridTableForData">
                                <thead>
                                    <tr>
                                        <th>
                                            BarCode
                                        </th>
                                        <th>
                                            Item Name
                                        </th>
                                        <th>
                                            Purchase Price
                                        </th>
                                        <th>
                                            Sale Price
                                        </th>
                                        <th>
                                            Order Quantity
                                        </th>
                                        <th>
                                            Receive Quantity
                                        </th>
                                        <th>
                                            VAT
                                        </th>
                                    </tr>
                                </thead>
                                <tbody id="ModalReceiveItemListTableBody"></tbody>
                            </table>
                        </div>

                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<script>
    jQuery(document).ready(function () {
        @{
            if (!string.IsNullOrWhiteSpace(@ViewBag.Message))
            {
            <text>
                var message = '@ViewBag.message';


                toastr.options = {
                    "closeButton": true,
                    "debug": false,
                    "positionClass": "toast-top-center",
                    "onclick": null,
                    "showDuration": "1000",
                    "hideDuration": "1000",
                    "timeOut": "2000",
                    "extendedTimeOut": "1000",
                    "showEasing": "swing",
                    "hideEasing": "linear",
                    "showMethod": "fadeIn",
                    "hideMethod": "fadeOut"
                }
                toastr.success(message);
            </text>
            }
        }
        var vForm = $('#__AjaxAntiForgeryForm');
        var vToken = $('input[name="__RequestVerificationToken"]', vForm).val();

        var table = $("#ProductList").dataTable({
            "language": {
                "aria": {
                    "sortAscending": ": activate to sort column ascending",
                    "sortDescending": ": activate to sort column descending"
                },
                "emptyTable": "No data available in table",
                "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                "infoEmpty": "No entries found",
                "infoFiltered": "(filtered1 from _MAX_ total entries)",
                "lengthMenu": "Show _MENU_ entries",
                "search": "Search:",
                "zeroRecords": "No matching records found"
            },
            "aaSorting": [],

            "lengthMenu": [
                [5, 15, 20, 50, -1],
                [5, 15, 20, 50, "All"]// change per page values here
            ],
            // set the initial value
            "pageLength": 10,
            "processing": true,
            "serverSide": true,
            "ajax": {
                data: {
                    __RequestVerificationToken: vToken
                },
                url: '@Url.Action("GetProductList", "Product")',
                type: 'POST'
            },
            "columns": [
                {
                    "data": "ProductId",
                    "orderable": false,
                    render: function () {
                        return "<span class='row-details row-details-close'></span>";
                    }
                },
                { "data": "ProductName" },
                { "data": "ProductStyle" },
                { "data": "CategoryName" },
                { "data": "SubCategoryName" },
                {
                    "data": "IncludeVat",
                    "orderable": false,
                    render: function (data, type, productGrid) {
                        if (productGrid.IncludeVat) {
                            return "<p style='font-size: 16px;color: green;font-style: italic;text-transform: capitalize;font-weight: bold;letter-spacing: 1px;text-shadow: 1px 1px 1px grey;'> Yes </p>";
                        } else {
                            return "<p style='font-size: 16px;color: red;font-style: italic;text-transform: capitalize;font-weight: bold;letter-spacing: 1px;text-shadow: 1px 1px 1px grey;'> No </p>";
                        }
                    }
                },
                { "data": "MaterialCost" },
                { "data": "CM" },
                { "data": "PurchasePrice" },
                { "data": "SellPrice" },
                {
                    "data": "IsActive",
                    "orderable": false,
                    render: function (data, type, productGrid) {
                        if (productGrid.IsActive) {
                            return "<p style='font-size: 16px;color: green;font-style: italic;text-transform: capitalize;font-weight: bold;letter-spacing: 1px;text-shadow: 1px 1px 1px grey;'> Active </p>";
                        } else {
                            return "<p style='font-size: 16px;color: red;font-style: italic;text-transform: capitalize;font-weight: bold;letter-spacing: 1px;text-shadow: 1px 1px 1px grey;'> Inactive </p>";
                        }
                    }
                },
                {
                    "data": "ProductImage",
                    "orderable": false,
                    render: function (data, type, productGrid) {
                        return "<img style='width: 50px;height: 50px;border: 1px solid #ddd;padding: 3px;'src='" + productGrid.ProductImage + "'/>";
                    }
                },
                {
                    "data": "ProductId",
                    "orderable": false,
                    render: function (data, type, productGrid) {
                        return "<a href='/Product/CreateOrEdit?productId=" +
                            productGrid.ProductId +
                            "' class='btn btn-circle blue'><i class='fa fa-edit'></i> Edit</a>";
                           ;
                    }
                }
            ]
        });


        table.on('click', ' tbody td .row-details', function () {
            var allValue = $(this).parents('tr')[0];
            var tableData = table.fnGetData(allValue);
            var productIdFromTable = tableData.ProductId;

            $.ajax({
                url: "/Product/GetAllGenerateItemListByProductId",
                type: 'GET',
                data: { productId: productIdFromTable },
                dataType: 'json',
                success: function (json) {
                    if (json.length) {

                    if (table.fnIsOpen(allValue)) {
                            $(this).addClass("row-details-close").removeClass("row-details-open");
                        table.fnClose(allValue);
                    }
                    else {
                        $(this).addClass("row-details-open").removeClass("row-details-close");
                        var sOut = '<table class="table table-striped table-bordered table-hover">';
                        sOut += '<thead>';
                        sOut += '<tr><th>#</th> <th>Product Item Name</th> <th>Product Barcode</th> <th>Purchase Price</th> <th>Sale Price</th></tr>';
                        sOut += '</thead>';
                        sOut += '<tbody>';
                        $.each(json, function (i, item) {

                            sOut += '<tr><td>' + parseInt(i +1) + '</td><td>' + item.ItemName + '</td><td>' + item.ProductCode + '</td><td>' + item.PurchasePrice + '</td><td>' + item.SalePrice + '</td></tr>';
                        });
                        sOut += '</tbody>';
                        sOut += '</table>';
                        table.fnOpen(allValue, sOut, 'details');

                    }
                  } else {
                        toastr.error("This Product Have No Item !!.");
                    }
                }
            });

        });

    });
</script>