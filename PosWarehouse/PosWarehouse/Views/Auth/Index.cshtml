@model PosWarehouse.ViewModel.AuthModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>SaRa Cloud Pos</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <meta content="" name="description" />
    <meta content="" name="author" />
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css" />
     @Styles.Render("~/Content/Assets/css")
    <link href="../../Content/pages/login.css" rel="stylesheet" type="text/css" />
    <link href="../../Content/css/themes/default.css" rel="stylesheet" type="text/css" id="style_color" />

    <!-- END THEME STYLES -->
     @Scripts.Render("~/bundles/jquery")
    <link rel="shortcut icon" href="~/Content/img/favicon.ico.png" />
</head>
<!-- END HEAD -->
<!-- BEGIN BODY -->
<body class="login">
    <!-- BEGIN SIDEBAR TOGGLER BUTTON -->
    <div class="menu-toggler sidebar-toggler">
    </div>
    <!-- END SIDEBAR TOGGLER BUTTON -->
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="#">
            <img src="../../Content/img/logo-big.png" style="height: 50px;" alt="" />
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        @using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { @class = "login-form" }))
        {
            @Html.AntiForgeryToken()
            <h3 class="form-title">Sign In</h3>
            <div class="alert alert-danger display-hide">
                <button class="close" data-close="alert"></button>
                <span>
                    Enter any username and password.
                </span>
            </div>
            <div class="form-group">

                @*<label class="control-label visible-ie8 visible-ie9">Username</label>
                <input class="form-control form-control-solid placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" name="username"/>*@

                @Html.TextBoxFor(c => c.EmployeeId, new { @class = "form-control form-control-solid", @type = "text", @autocomplete = "off", @placeholder = "Employee ID", @name = "Employee ID" })
                @Html.ValidationMessageFor(c => c.EmployeeId, "", new { @class = "text-danger", @style = "font-size: xx-small" })

            </div>
            <div class="form-group">
                @*<label class="control-label visible-ie8 visible-ie9">Password</label>
                <input class="form-control form-control-solid placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" name="password"/>*@
                @Html.TextBoxFor(c => c.EmployeePassword, new { @class = "form-control form-control-solid", @type = "password", @autocomplete = "off", @placeholder = "Password", @name = "password" })
                @Html.ValidationMessageFor(c => c.EmployeePassword, "", new { @class = "text-danger", @style = "font-size: xx-small" })

            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-6 text-left">
                        <label class="rememberme check">
                            <input type="checkbox" name="remember" value="1"/>Remember
                        </label>
                    </div>
                    <div class="col-md-6 text-right">
                        <button type="submit" class="btn btn-success uppercase">Login <i class="fa fa-sign-in"></i></button>
                    </div>
                </div>
                @*<a href="javascript:;" id="forget-password" class="forget-password">Forgot Password?</a>*@
            </div>

        }
        <!-- END LOGIN FORM -->
        <!-- BEGIN FORGOT PASSWORD FORM -->
        @using (Html.BeginForm("ForgotePassword", "Auth", FormMethod.Post, new { @class = "forget-form" }))
        {
            @Html.AntiForgeryToken()
            <h3>Forget Password ?</h3>
            <p>
                Enter your e-mail address below to reset your password.
            </p>
            <div class="form-group">
                @Html.TextBoxFor(c => c.EmployeeEmail, new { @class = "form-control", @type = "text", @autocomplete = "off", @placeholder = "Email", @name = "email" })
            </div>
            <div class="form-actions">
                <button type="button" id="back-btn" class="btn btn-default">Back</button>
                <button type="submit" class="btn btn-success uppercase pull-right">Submit</button>
            </div>
        }
        <!-- END FORGOT PASSWORD FORM -->
        <!-- END REGISTRATION FORM -->
    </div>
    <div class="copyright">
        &copy; @DateTime.Now.Year - SaRa Lifestyle Ltd By Snowtex.
    </div>
    <!-- END LOGIN -->
    @Scripts.Render("~/bundles/plugins/scripts")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="../../scripts/login.js" type="text/javascript"></script>
    <!-- END PAGE LEVEL SCRIPTS -->



    <script>
        jQuery(document).ready(function () {
            @{
                if (!string.IsNullOrWhiteSpace(@ViewBag.Message))
                {
                    <text>
                        var message = '@ViewBag.message';


                        toastr.options = {
                            "closeButton": true,
                            "debug": false,
                            "positionClass": "toast-top-center",
                            "onclick": null,
                            "showDuration": "1000",
                            "hideDuration": "1000",
                            "timeOut": "5000",
                            "extendedTimeOut": "1000",
                            "showEasing": "swing",
                            "hideEasing": "linear",
                            "showMethod": "fadeIn",
                            "hideMethod": "fadeOut"
                        }
                        toastr.warning(message);
                    </text>
                }
            }

            Metronic.init(); // init metronic core components
            Layout.init(); // init current layout
            Login.init();
            Demo.init();


        });
    </script>
    <!-- END JAVASCRIPTS -->
</body>
<!-- END BODY -->
</html>