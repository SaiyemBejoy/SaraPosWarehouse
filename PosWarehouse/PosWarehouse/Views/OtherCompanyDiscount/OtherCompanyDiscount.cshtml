@using PosWarehouse.ViewModel
@model PosWarehouse.ViewModel.OtherCompanyOfferDisModel
@{
    ViewBag.Title = "OtherCompanyDiscount";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var  objOtherCompanyOfferDisModel = ViewBag.objOtherCompanyOfferDisList as List<OtherCompanyOfferDisModel>;
}

<div class="page-head">
    <div class="page-title">
        <h1>Manage Discount</h1>
    </div>
</div>

<div class="row margin-top-10">
    <div class="col-md-12">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Add Company Discount
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse" data-original-title="" title="">
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                @using (Html.BeginForm("SaveData", "OtherCompanyDiscount", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                <div class="form-body">
                    <br />
                    <div class="form-group">
                        @Html.LabelFor(c => c.CompanyName, new { @class = "col-md-3 control-label" })
                        <div class="col-md-6">
                            <div class="input-icon">
                                <i class="fa fa-text-width"></i>
                                @Html.TextBoxFor(c => c.CompanyName, new { @class = "form-control input-circle", @placeholder = "Company Name", @style = "max-width: 580px;" })
                                @Html.ValidationMessageFor(c => c.CompanyName)
                            </div>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(c => c.Offer, new { @class = "col-md-3 control-label" })
                        <div class="col-md-6">
                            <div class="input-icon">
                                <i class="fa fa-text-width"></i>
                                @Html.TextBoxFor(c => c.Offer, new { @class = "form-control input-circle", @placeholder = "Offer", @style = "max-width: 580px;" })
                                @Html.ValidationMessageFor(c => c.Offer)
                            </div>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(c => c.OfferValidity, new { @class = "col-md-3 control-label" })
                        <div class="col-md-6">
                            <div class="input-icon">
                                <i class="fa fa-calendar"></i>
                                @Html.TextBoxFor(c => c.OfferValidity, new { @class = "form-control  datepicker input-circle", @readonly= "readonly", @placeholder = "Offer Validity",  @style = "max-width: 580px;" })
                                @Html.ValidationMessageFor(c => c.OfferValidity)
                            </div>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(c => c.EligibleForOffer, new { @class = "col-md-3 control-label" })
                        <div class="col-md-6">
                            <div class="input-icon">
                                <i class="fa fa-text-width"></i>
                                @Html.TextBoxFor(c => c.EligibleForOffer, new { @class = "form-control input-circle", @placeholder = "Eligible For Offer",  @style = "max-width: 580px;" })
                                @Html.ValidationMessageFor(c => c.EligibleForOffer)
                            </div>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(c => c.ActiveStatus, new { @class = "col-md-3 control-label" })
                        <div class="col-md-6">
                            <div class="checkbox-list" style="margin-top: 8px;">

                                @Html.CheckBoxFor(c => c.ActiveStatus, new { @class = "checker" })

                            </div>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3"></div>
                        <div class="col-md-6 text-left">
                            @Html.HiddenFor(c => c.OtherCompanyOfferId)
                            <button class="btn btn-success" type="submit"><i class="fa fa-save"></i> Save</button>
                            @*<button class="btn btn-success" type="submit" id="clear"><i class="fa fa-save"></i> clear2</button>*@
                            <a class="btn btn-danger" href="@Url.Action("SaveData", "OtherCompanyDiscount")"><i class="fa fa-cut"></i> Clear</a>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                </div>
                }

            </div>

        </div>

        <div class="portlet box blue-madison">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Offer Lists
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse" data-original-title="" title="">
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="OtherCompanyOfferTable">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Company Name</th>
                                <th>Offer</th>
                                <th>Offer Validity</th>
                                <th>Eligible For Offer</th>
                                <th>Active Status</th>
                                <th class="text-center" style="width: 20%">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        @if (objOtherCompanyOfferDisModel != null && objOtherCompanyOfferDisModel.Count != 0)
                        {
                            int counter = 1;
                            foreach (var data in objOtherCompanyOfferDisModel)
                            {
                            <tr>
                                <td>@counter</td>
                                <td>@data.CompanyName</td>
                                <td>@data.Offer</td>
                                <td>@data.OfferValidity</td>
                                <td>@data.EligibleForOffer</td>
                                @if (data.Active_YN == "Y")
                                {
                                    <td>
                                        <i class="fa fa-check-circle" style="color: green;"> Active</i>
                                    </td>
                                }
                                else
                                {
                                    <td><i class="fa fa-times-circle" style="color: red;"></i> InActive</td>
                                }
                                <td class="text-center">
                                    @Html.ActionLink(" Edit", "OtherCompanyDiscount", "OtherCompanyDiscount", new { companyOfferId = data.OtherCompanyOfferId },new { @class = "btn btn-primary fa fa-edit btn-xs" }) ||

                                </td>
                            </tr>
                                counter = counter + 1;
                            }
                        }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    jQuery(document).ready(function () {

        var table = $("#OtherCompanyOfferTable").dataTable();

        @{
            var message2 = TempData["message"];

            if (message2 != null)
            {
                <text>
                    var message = '@TempData["message"]';


                    toastr.options = {
                        "closeButton": true,
                        "debug": false,
                        "positionClass": "toast-top-center",
                        "onclick": null,
                        "showDuration": "1000",
                        "hideDuration": "1000",
                        "timeOut": "1000",
                        "extendedTimeOut": "1000",
                        "showEasing": "swing",
                        "hideEasing": "linear",
                        "showMethod": "fadeIn",
                        "hideMethod": "fadeOut"
                    }
                    toastr.success(message);
                </text>
            }

        }
    });

</script>