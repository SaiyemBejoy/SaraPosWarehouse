@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/ProjectScripts/GiftVoucherDelivery.js"></script>
    <script>

        jQuery(document).ready(function () {
            var table = $("#giftVoucherDeliveryTable").dataTable();
            @{
                if (!string.IsNullOrWhiteSpace(@ViewBag.Message))
                {
                    <text>
                        var message = '@ViewBag.message';


                        toastr.options = {
                            "closeButton": true,
                            "debug": false,
                            "positionClass": "toast-top-center",
                            "onclick": null,
                            "showDuration": "1000",
                            "hideDuration": "1000",
                            "timeOut": "1000",
                            "extendedTimeOut": "1000",
                            "showEasing": "swing",
                            "hideEasing": "linear",
                            "showMethod": "fadeIn",
                            "hideMethod": "fadeOut"
                        }
                        toastr.success(message);
                    </text>
                }
        }
        });
    </script>
}



