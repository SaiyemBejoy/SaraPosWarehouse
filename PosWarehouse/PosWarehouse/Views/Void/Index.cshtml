<script>
    jQuery(document).ready(function () {

        $(function () {
            $(".datepicker").datepicker({
                format: 'dd-MMM-yy',//check change
                changeMonth: true,
                changeYear: true
            }).datepicker("setDate", new Date());
        });

        $("#submit").click(function () {
            var shopId = $(".shopId2").val();
            var froDate = $("#FromDate").val();
            var toDate = $("#ToDate").val();

            if (shopId > 0) {

                var dataObject = {
                    'ShopId': shopId,
                    'FromDate': froDate,
                    'ToDate': toDate
                }

                $.ajax({
                    type: 'GET',
                    url: '/Void/GetVoidInfoByShopId/',
                    data: dataObject,
                    dataType: 'json',
                    success: function (result) {
                        var voidTableQuantity = result.length;
                        $("#gridTableBodyForVoidInfo").html("");
                        if (result.length !== 0) {
                            for (var i = 0; i < voidTableQuantity; i++) {
                                $("#gridTableBodyForVoidInfo").append('<tr>' +
                                    '<td>' +
                                    parseInt(i + 1) +
                                    '</td>' +
                                    '<td>' +
                                    result[i].InvoiceNumber +
                                    '</td>' +
                                    '<td>' +
                                    result[i].InvoiceDate +
                                    '</td>' +
                                    '<td>' +
                                    result[i].TotalItem +
                                    '</td>' +
                                    '<td>' +
                                    result[i].TotalAmount +
                                    '</td>' +
                                    '<td>' +
                                    result[i].Vat +
                                    '</td>' +
                                    '<td>' +
                                    result[i].DiscountPercent +
                                    '</td>' +
                                    '<td>' +
                                    result[i].DiscountAmount +
                                    '</td>' +
                                    '<td>' +
                                    result[i].SubTotal +
                                    '</td>' +
                                    '<td>' +
                                    result[i].NetAmount +
                                    '</td>' +
                                    '<td>' +
                                    result[i].BagPrice +
                                    '</td>' +
                                    '<td>' +
                                    result[i].CreatedBy +
                                    '</td>' +
                                    '</tr>'
                                );
                            }
                        } else {
                            toastr.error("No Data Found !.");
                        }
                    }

                });
            } else {
                toastr.error("Must Select Shop Name!");
            }

        });
     });

</script>


