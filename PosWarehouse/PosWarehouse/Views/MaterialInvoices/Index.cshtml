
@{
    ViewBag.Title = "MaterialInvoices";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<div class="page-head">
    <div class="page-title">
        <h1>Material Invoices</h1>
    </div>
</div>

<div class="row margin-top-10">
    <div class="col-md-12">
        <div class="portlet box green-haze">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Material Invoice Entry
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse" data-original-title="" title="">
                    </a>
                </div>
            </div>
            <div class="portlet-body">

                <div class="form-horizontal">
                    <br />

                    <div class="row">
                        <div class="col-md-12">
                            <div class="portlet light bordered">
                                <div class="portlet-title">
                                    <div class="caption font-green-sharp">
                                        <i class="icon-speech font-green-sharp"></i>
                                        <span class="caption-subject bold uppercase"> Material Invoice Details</span>

                                    </div>
                                </div>
                                <div class="portlet-body">

                                    <br />
                                    <div class="row">
                                        <div class="col-md-12">

                                            @*Space For Input Form*@


                                        </div>
                                    </div>

                                    <div class="row">
                                        <!-- BEGIN SAMPLE TABLE PORTLET-->
                                        <div class="portlet light bordered">
                                            <div class="portlet-title">
                                                <div class="caption font-green-sharp">
                                                    <i class="icon-speech font-green-sharp"></i>
                                                    <span class="caption-subject bold uppercase"> Grid View</span>

                                                </div>
                                                <div class="tools">
                                                    <a href="javascript:;" class="collapse" data-original-title="" title="">
                                                    </a>
                                                </div>
                                            </div>
                                            <div class="portlet-body">
                                                <div class="table-responsive">
                                                    <table class="table table-striped table-bordered table-hover" id="gridTable">
                                                        <thead>
                                                            <tr>
                                                                <th>#</th>
                                                                <th>Invoice ID</th>
                                                                <th>Invoice Date </th>
                                                                <th>Invoice Number</th>
                                                                <th>Supplier Id</th>
                                                                <th>Supplier Name</th>
                                                                <th>VAT </th>
                                                                <th>Total Amount</th>
                                                                <th>Remarks</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody id="gridTableBodyForMaterialInvoiceInfo"></tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- END SAMPLE TABLE PORTLET-->
                                    </div>

                                </div>
                            </div>
                            <!-- END GENERAL PORTLET-->
                            @*<div class="form-group">
                                <div class="col-md-3 text-right">
                                </div>
                                <div class="col-md-3 text-right">



                                    <button class="btn btn-success" id="AllDataSave" type="submit"><i class="fa fa-save"></i> Save</button>
                                    <a class="btn btn-danger" id="clear" href="@Url.Action("Index", "MaterialInvoices")"><i class="fa fa-cut"></i> Clear</a>
                                </div>
                                <div class="col-md-3"></div>
                                <div class="col-md-3"></div>
                            </div>*@


                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>


<script>

    $(document).ready(function () {

        $.ajax({
            type: 'GET',
            //url: 'http://192.168.2.226/api/MaterialInvoices/',
            url: '@PosWarehouse.Utility.ApiConfiguration.ERPApi' + 'MaterialInvoices',
            dataType: 'json',
            beforeSend: function () {
                $('#preLoader').show();
            },
            success: function (result) {
                if (result.length !== 0) {
                    for (var i = 0; i < result.length; i++) {

                        $("#gridTableBodyForMaterialInvoiceInfo").append('<tr>' +
                            '<td>' +
                            parseInt(i + 1) +
                            '</td>' +
                            '<td>' +
                            result[i].invoiceId +
                            '</td>' +
                            '<td>' +
                            result[i].invoiceDate +
                            '</td>' +
                            '<td>' +
                            result[i].invoiceNumber +
                            '</td>' +
                            '<td>' +
                            result[i].supplierId +
                            '</td>' +
                            '<td>' +
                            result[i].supplierName +
                            '</td>' +
                            '<td>' +
                            result[i].vat +
                            '</td>' +
                            '<td>' +
                            result[i].totalAmount +
                            '</td>' +
                            '<td>' +
                            result[i].remarks +
                            '</td>' +
                            '</tr>');
                    }
                    
                }
                var table = $("#gridTable").dataTable();
                $('#preLoader').hide();
            }

        });

        

    });

    

</script>


