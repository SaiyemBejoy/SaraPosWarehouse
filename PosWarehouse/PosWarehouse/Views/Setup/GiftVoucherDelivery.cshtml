                            <tr>
                                <th>#</th>
                                <th>Gift Voucher Code</th>
                                <th>Gift Voucher Amount</th>
                                <th>Remaining Amount</th>
                                <th class="text-center" style="width: 20%">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (giftVoucherDeliveryModel != null && giftVoucherDeliveryModel.Count != 0)
                            {
                                int counter = 1;
                                foreach (var data in giftVoucherDeliveryModel)
